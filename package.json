{
  "private": true,
  "type": "module",
  "scripts": {
    "build": "react-router build",
    "dev": "react-router dev",
    "deploy": "react-router build && NODE_ENV=production wrangler deploy",
    "deploy:version": "react-router build && wrangler versions upload",
    "deploy:promote": "wrangler versions deploy",
    "start": "wrangler dev --test-scheduled",
    "typecheck": "react-router typegen && tsc",
    "typegen": "wrangler types",
    "lint": "biome lint .",
    "format": "prettier --write .",
    "db:drop": "drizzle-kit drop",
    "db:generate": "drizzle-kit generate",
    "db:apply": "wrangler d1 migrations apply DB --local",
    "db:apply-prod": "wrangler d1 migrations apply DB --remote"
  },
  "dependencies": {
    "@radix-ui/react-avatar": "^1.1.3",
    "@radix-ui/react-checkbox": "^1.1.4",
    "@radix-ui/react-dropdown-menu": "^2.1.6",
    "@radix-ui/react-label": "^2.1.2",
    "@radix-ui/react-slot": "^1.1.2",
    "@react-router/cloudflare": "*",
    "better-auth": "^1.1.19",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "drizzle-orm": "~0.36.4",
    "isbot": "^5.1.17",
    "lucide-react": "^0.475.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router": "*",
    "session-context": "^0.0.6",
    "sonner": "^1.7.1",
    "spin-delay": "^2.0.1",
    "tailwind-merge": "^3.0.1",
    "tailwindcss-animate": "^1.0.6"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@cloudflare/workers-types": "^4.20241230.0",
    "@react-router/dev": "*",
    "@tailwindcss/vite": "^4.0.6",
    "@types/node": "^20.17.10",
    "@types/react": "^19.0.1",
    "@types/react-dom": "^19.0.2",
    "drizzle-kit": "~0.30.4",
    "prettier": "^3.5.2",
    "prettier-plugin-organize-imports": "^4.1.0",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "tailwindcss": "^4.0.6",
    "typescript": "^5.7.2",
    "vite": "^6.1.1",
    "vite-tsconfig-paths": "^5.1.4",
    "wrangler": "^3.109.2"
  }
