{
	"private": true,
	"type": "module",
	"scripts": {
		"build": "react-router build",
		"cf-typegen": "wrangler types",
		"deploy": "npm run build && WRANGLER_SEND_METRICS=false wrangler deploy",
		"deploy:version": "react-router build && wrangler versions upload",
		"deploy:promote": "wrangler versions deploy",
		"dev": "react-router dev",
		"postinstall": "npm run cf-typegen",
		"preview": "npm run build && vite preview",
		"typecheck": "npm run cf-typegen && react-router typegen && tsc -b",
		"check": "biome check .",
		"check:fix": "biome check --fix .",
		"format": "biome format --write .",
		"auth:secret": "pnpm dlx @better-auth/cli@latest secret",
		"auth:generate": "pnpm dlx @better-auth/cli@latest generate --config=./app/services/auth/auth.server.ts --output=./drizzle/schema/auth.ts",
		"db:generate": "drizzle-kit generate",
		"db:studio": "drizzle-kit studio",
		"db:drop": "drizzle-kit drop",
		"db:seed:local": "tsx ./drizzle/seed/seed.ts",
		"db:seed:remote": "wrangler d1 execute DB --remote --file ./drizzle/seed/seed.sql",
		"db:reset:local": "tsx ./drizzle/seed/reset.ts",
		"db:delete:local": "rm -i ./.wrangler/state/v3/d1/miniflare-D1DatabaseObject/* || true",
		"db:migrate:local": "wrangler d1 migrations apply DB --local",
		"db:migrate:remote": "wrangler d1 migrations apply DB --remote"
	},
	"dependencies": {
		"@conform-to/react": "^1.15.1",
		"@conform-to/zod": "^1.15.1",
		"@origin-space/image-cropper": "^0.1.9",
		"@radix-ui/react-alert-dialog": "^1.1.15",
		"@radix-ui/react-avatar": "^1.1.11",
		"@radix-ui/react-checkbox": "^1.3.3",
		"@radix-ui/react-collapsible": "^1.1.12",
		"@radix-ui/react-dialog": "^1.1.15",
		"@radix-ui/react-dropdown-menu": "^2.1.16",
		"@radix-ui/react-label": "^2.1.8",
		"@radix-ui/react-popover": "^1.1.15",
		"@radix-ui/react-radio-group": "^1.3.8",
		"@radix-ui/react-select": "^2.2.6",
		"@radix-ui/react-separator": "^1.1.8",
		"@radix-ui/react-slider": "^1.3.6",
		"@radix-ui/react-slot": "^1.2.4",
		"@radix-ui/react-switch": "^1.2.6",
		"@radix-ui/react-tooltip": "^1.2.8",
		"@tanstack/react-table": "^8.21.3",
		"better-auth": "^1.4.10",
		"boring-avatars": "^2.0.4",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"cookie": "^1.1.1",
		"drizzle-orm": "~0.45.1",
		"isbot": "^5.1.32",
		"lucide-react": "^0.562.0",
		"react": "^19.2.3",
		"react-dom": "^19.2.3",
		"react-router": "^7.12.0",
		"sonner": "^2.0.7",
		"spin-delay": "^2.0.1",
		"tailwind-merge": "^3.4.0",
		"tailwindcss-animate": "^1.0.7",
		"zod": "^4.3.4"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.10",
		"@cloudflare/vite-plugin": "1.17.0",
		"@commitlint/cli": "^20.3.0",
		"@commitlint/config-conventional": "^20.3.0",
		"@libsql/client": "^0.15.15",
		"@react-router/dev": "^7.12.0",
		"@tailwindcss/vite": "^4.1.18",
		"@types/node": "^25.0.3",
		"@types/react": "^19.2.7",
		"@types/react-dom": "^19.2.3",
		"drizzle-kit": "^0.31.8",
		"drizzle-seed": "^0.3.1",
		"lefthook": "^2.0.13",
		"tailwindcss": "^4.1.18",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3",
		"vite": "7.2.7",
		"vite-plugin-devtools-json": "^1.0.0",
		"vite-tsconfig-paths": "5.1.4",
		"wrangler": "4.53.0"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild",
			"lefthook",
			"sharp",
			"workerd"
		]
	}
}
